<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
   
    <div class="container">
        <div class="row">
            <div class=" user-infor-contain">
                <form method="POST" action="/user/update-user">

                  
                    <div class="">
                        <h3> Update  user</h3>
                       
                    </div>
                    <form>
                        <input hidden value="<%= userData.id %>" name="id"/>
                        <div class="mb-3  mt-3 col-6">
                            <label for="email" class="form-label">Email address</label>
                            <input value="<%= userData.email %>" name="emailname" type="email" class="form-control" id="email"
                                aria-describedby="emailHelp" required>
                        </div>
                        <div>
                            <div class="mb-3 col-6 ">
                                <label for="username" class="form-label">Username</label>
                                <input value="<%= userData.username %>" name="username" type="username" class="form-control" id="password" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </form>

            </div>

            
        </div>
    </div>
</body>

</html>